<div
  class='index-page-body container d-flex flex-column justify-content-center align-items-center'
>
  <div class='mt-3'>
    <!-- Example single danger button -->
    <div class='btn-group'>
      <button
        type='button'
        class='btn btn-secondary btn-lg dropdown-toggle'
        data-bs-toggle='dropdown'
        aria-expanded='false'
      >
        請選擇類別
      </button>
      <ul class='dropdown-menu'>
        {{#each categories}}
          <li><a
              class='dropdown-item'
              href='/?categoryId={{this._id}}'
            >{{this.name}}</a></li>
        {{/each}}
        <li><hr class='dropdown-divider' /></li>
        <li><a class='dropdown-item' href='/'>全部</a></li>
      </ul>
    </div>
  </div>

  <div
    class='total-amount d-flex justify-content-around align-items-center mt-3 border rounded'
  >
    <span class='fs-2 bold'>
      {{#if categoryId}}
        {{selectCategory.name}}
      {{else}}
        全部
      {{/if}}
      總支出</span>
    <span class='fs-2'>{{totalAmount}}</span>
    <span><i class='fas fa-sack-dollar fs-2'></i></span>
  </div>

  <div class='expense-items-box d-flex flex-column align-items-center h4 mt-3'>
    {{#if selectCategory}}
      {{#each selectRecords}}
        <div
          class='expense-items-list d-flex justify-content-between align-items-center'
        >
          <div class='mx-2 d-flex align-items-center'>
            <span><i class='{{this.categoryId.icon}}'></i></span>
            <div class='d-flex flex-column align-items-center ms-2'>
              <span class='fs-2'>{{this.name}}</span>
              <span class='fs-6'>{{this.date}}</span>
            </div>
            <span class='ms-4 fs-2 me-1'>$</span>
            <span class='fs-2'> {{this.amount}}</span>
          </div>
          <div class='me-2 d-flex align-items-start'>
            <a
              href='/record/{{this._id}}/edit'
              class='btn btn-info d-block me-2'
            >修改</a>
            <form action='/record/{{this._id}}?_method=DELETE' method='POST'>
              <button type='submit' class='btn btn-danger'>刪除</button>
            </form>
          </div>
        </div>
      {{/each}}
    {{else}}
      {{#each records}}
        <div
          class='expense-items-list d-flex justify-content-between align-items-center'
        >
          <div class='mx-2 d-flex align-items-center'>
            <span><i class='{{this.categoryId.icon}}'></i></span>
            <div class='d-flex flex-column align-items-center ms-2'>
              <span class='fs-2'>{{this.name}}</span>
              <span class='fs-6'>{{this.date}}</span>
            </div>
            <span class='ms-4 fs-2 me-1'>$</span>
            <span class='fs-2'> {{this.amount}}</span>
          </div>
          <div class='me-2 d-flex align-items-start'>
            <a
              href='/record/{{this._id}}/edit'
              class='btn btn-info d-block me-2'
            >修改</a>
            <form action='/record/{{this._id}}?_method=DELETE' method='POST'>
              <button type='submit' class='btn btn-danger'>刪除</button>
            </form>
          </div>
        </div>
      {{/each}}
    {{/if}}

  </div>
  <div>
    <a href='/record/create' class='btn btn-outline-warning btn-lg'><i
        class='fas fa-plus'
      ></i>新增紀錄</a>
  </div>
</div>