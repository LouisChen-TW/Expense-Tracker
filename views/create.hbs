<div class='container d-flex justify-content-center'>
  <form
    class='d-flex flex-column align-items-center'
    action='/record'
    method='POST'
  >
    <h1>請輸入您的支出</h1>
    <div class='create-input-box d-flex flex-column align-items-left'>
      <span class='create-input-item'><span
          class='required-mark'
        >*</span>為必填項目</span>

      <div class='create-input-item'>
        <label for='name'><span class='required-mark'>*</span>名稱：</label>
        <input type='text' id='name' name='name' required />
      </div>
      <div class='create-input-item'>
        <label for='date'><span class='required-mark'>*</span>日期：</label>
        <input type='date' id='date' name='date' required />
      </div>
      <div class='create-input-item'>
        <label for='categoryId'><span
            class='required-mark'
          >*</span>類別：</label>
        <select id='categoryId' name='categoryId' required>
          <option value=''> 請選擇類別</option>
          {{#each categories}}
            <option value='{{this._id}}'>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class='create-input-item'>
        <label for='amount'><span class='required-mark'>*</span>金額：</label>
        <input type='number' id='amount' name='amount' required />
      </div>
      <button
        type='submit'
        class='create-input-item btn btn-primary'
      >新增支出</button>
    </div>
  </form>
</div>